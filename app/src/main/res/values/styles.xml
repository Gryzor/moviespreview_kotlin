<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.Inverse" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="ViewPagerTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabTextAppearance">@style/ViewPagerTabTextAppearance</item>
        <item name="tabSelectedTextColor">?attr/colorAccent</item>
    </style>

    <style name="ViewPagerTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MoviesPreviewTextAppearance" parent="@android:style/TextAppearance" />

    <style name="MoviesPreviewTextAppearance.Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>

    <style name="MoviesPreviewTextAppearance.Small" parent="@android:style/TextAppearance.Small" />

    <style name="MoviesPreviewTextAppearanceInverse" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MoviesPreviewTextAppearanceInverse.Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MoviesPreviewTextAppearanceInverse.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>



