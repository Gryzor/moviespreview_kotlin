<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="MoviesPreviewTextAppearance" parent="@android:style/TextAppearance"/>

    <style name="MoviesPreviewTextAppearance.Title" parent="@android:style/TextAppearance.Medium"/>

    <style name="MoviesPreviewTextAppearance.Small" parent="@android:style/TextAppearance.Small"/>

</resources>



